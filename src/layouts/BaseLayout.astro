---
// BaseLayout.astro
// Layout file for Top Water Angler
// Usage: wrap page content with <BaseLayout> to get header, footer, and styles
const { title = 'Top Water Angler' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="Top Water Angler: Your guide to fishing tips, tactics, and adventures." />
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/global.css`} />
  </head>
  <body>
    <header class="site-header">
      <div class="container header-container">
        <h1 class="site-title">
          <a href={`${import.meta.env.BASE_URL}`}>Top Water Angler</a>
        </h1>
        <nav class="site-nav">
          <ul>
            <li><a href={`${import.meta.env.BASE_URL}`}>Home</a></li>
            <li><a href={`${import.meta.env.BASE_URL}blog/`}>Blog</a></li>
            <!-- Add more links here later -->
          </ul>
        </nav>
      </div>
    </header>

    <main class="site-content">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>&copy; {new Date().getFullYear()} Top Water Angler. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    background-color: #f9f9f9;
    color: #111;
    line-height: 1.6;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .site-header {
    background-color: #1f3c59;
    color: #fff;
    padding: 20px 0;
  }

  .site-title a {
    color: #fff;
    text-decoration: none;
    font-size: 1.8rem;
    font-weight: bold;
  }

  .site-nav ul {
    list-style: none;
    display: flex;
    gap: 20px;
    margin: 10px 0 0 0;
    padding: 0;
  }

  .site-nav a {
    color: #fff;
    text-decoration: none;
    font-weight: 500;
  }

  .site-nav a:hover {
    text-decoration: underline;
  }

  .site-content {
    padding: 40px 0;
  }

  .site-footer {
    background-color: #1f3c59;
    color: #fff;
    text-align: center;
    padding: 20px 0;
    margin-top: 60px;
  }
</style>
