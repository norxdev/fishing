---
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Top Water Angler</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="/fishing/global.css" />
  </head>
  <body>
    <header class="site-header">
      <div class="header-container">
        <h1 class="site-title"><a href="/fishing/"><span>Top Water Angler</span></a></h1>
        <nav class="site-nav">
          <a href="/fishing/">Home</a>
          <a href="/fishing/blog/">Blog</a>
        </nav>
      </div>
    </header>

    <main class="site-main">
      <slot />
    </main>

    <footer class="site-footer">
      <p>&copy; {new Date().getFullYear()} Top Water Angler</p>
    </footer>
  </body>
</html>
