---
const {
  title = "Top Water Angler",
  description = "Seasonal fishing tactics that actually work."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/global.css`} />
  </head>

  <body>
    <header class="site-header">
      <div class="header-inner">
        <a href="/" class="logo">Top Water Angler</a>
        <nav>
          <a href="/blog">Blog</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <p>© {new Date().getFullYear()} Top Water Angler · Seasonal fishing tactics</p>
    </footer>
  </body>
</html>
