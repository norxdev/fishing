    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <header>
      <a href="/fishing">Top Water Angler</a>
      <nav>
        <a href="/fishing">Home</a>
        <a href="/fishing/blog">Blog</a>
