---
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href={`${Astro.base}global.css`} />
  </head>
  <body>
    <header>
      <nav>
        <a href={`${Astro.base}`}>Home</a>
        <a href={`${Astro.base}blog/`}>Blog</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>&copy; {new Date().getFullYear()} Top Water Angler</p>
    </footer>
  </body>
</html>
