---
const { title = "Norx Fishing", description = "Modern fishing tactics, gear, and strategy." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/global.css`} />
  </head>

  <body>
    <header class="site-header">
      <div class="container header-inner">
        <a href={import.meta.env.BASE_URL} class="logo">Norx Fishing</a>
        <nav class="nav">
          <a href={import.meta.env.BASE_URL}>Home</a>
          <a href={`${import.meta.env.BASE_URL}blog/`}>Blog</a>
        </nav>
      </div>
    </header>

    <main class="site-main">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>Â© {new Date().getFullYear()} Norx Fishing. Built with Astro.</p>
      </div>
    </footer>
  </body>
</html>
