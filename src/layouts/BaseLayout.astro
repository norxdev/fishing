---
// src/layouts/BaseLayout.astro
const { title } = Astro.props;
const BASE_URL = import.meta.env.BASE_URL || '/';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | Top Water Angler` : 'Top Water Angler'}</title>
    <meta name="description" content="Top Water Angler â€“ Bass, Redfish, and freshwater fishing tips, tutorials, and gear guides." />
    <link rel="stylesheet" href={`${BASE_URL}styles/global.css`} />
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <a class="logo" href={BASE_URL}>Top Water Angler</a>
        <nav>
          <ul>
            <li><a href={BASE_URL}>Home</a></li>
            <li><a href={`${BASE_URL}blog/`}>Blog</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        &copy; {new Date().getFullYear()} Top Water Angler. All rights reserved.
      </div>
    </footer>
  </body>
</html>
