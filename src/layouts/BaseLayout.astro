---
const { title = "Top Water Angler", description = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- GitHub Pages-safe global CSS -->
    <link rel="stylesheet" href="/global.css" />
  </head>

  <body>
    <header class="site-header">
      <div class="container">
        <a href="/" class="logo">Top Water Angler</a>
        <nav>
          <a href="/">Home</a>
          <a href="/blog/">Blog</a>
        </nav>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>
  </body>
</html>
