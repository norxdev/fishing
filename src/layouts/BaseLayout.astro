---
const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href={`${Astro.base}global.css`} />
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <h1 class="site-title"><a href={`${Astro.base}`}>Top Water Angler</a></h1>
        <nav>
          <a href={`${Astro.base}`}>Home</a>
          <a href={`${Astro.base}blog/`}>Blog</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        &copy; {new Date().getFullYear()} Top Water Angler
      </div>
    </footer>
  </body>
</html>
