---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// --- Generate static paths for all blog posts ---
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
  }));
}

// --- Load the specific post ---
const { slug } = Astro.params;
const post = await getCollection('blog').then(posts => posts.find(p => p.slug === slug));

if (!post) {
  throw new Error(`Post not found: ${slug}`);
}
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article>
    <div class="post-header">
      <img src={post.data.image || "https://source.unsplash.com/900x400/?fishing"} alt={post.data.title} />
      <h1>{post.data.title}</h1>
      <p class="post-date">{new Date(post.data.publishDate).toLocaleDateString()}</p>
    </div>

    <div class="post-content">
      {post.body}
    </div>
  </article>
</BaseLayout>
