---
import { getEntryBySlug } from 'astro:content';

const { slug } = Astro.params;
const post = await getEntryBySlug('blog', slug);

if (!post) {
  throw new Error('Post not found'); // Works with all Astro versions
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{post.data.title} | Fishing Blog</title>
    <meta name="description" content={post.data.description} />
    <style>
      body { font-family: sans-serif; max-width: 800px; margin: auto; padding: 2rem; line-height: 1.6; color: #111; background: #f8f8f8; }
      h1 { font-size: 2.5rem; margin-bottom: 1rem; }
      p.date { color: #555; margin-bottom: 1rem; }
      article { background: white; padding: 2rem; border-radius: 0.5rem; box-shadow: 0 2px 6px rgba(0,0,0,0.05); }
      a { color: #0070f3; text-decoration: none; }
      a:hover { text-decoration: underline; }
    </style>
  </head>
  <body>
    <article>
      <h1>{post.data.title}</h1>
      <p class="date">{post.data.publishDate}</p>
      <div innerHTML={post.body}></div>
    </article>
  </body>
</html>
