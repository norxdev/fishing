---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// Generate static paths
export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map(post => ({
    params: { slug: post.slug },
  }));
}

// Get the post for this page
const { slug } = Astro.params;
const post = (await getCollection("blog")).find(p => p.slug === slug);

if (!post) {
  throw new Error(`Post not found: ${slug}`);
}

const { Content } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article>
    <div class="post-header">
      <img src={post.data.image || `${Astro.base}default.jpg`} alt={post.data.title} />
      <h1>{post.data.title}</h1>
      <p class="post-date">{new Date(post.data.publishDate).toLocaleDateString()}</p>
    </div>

    <div class="post-content">
      <Content />
    </div>

    <p>
      <a href={`${Astro.base}blog/`}>‚Üê Back to Blog</a>
    </p>
  </article>
</BaseLayout>
