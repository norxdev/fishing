---
import { getEntryBySlug, getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug }
  }));
}

const { slug } = Astro.params;
const post = await getEntryBySlug('blog', slug);

if (!post) {
  throw new Error(`Post not found: ${slug}`);
}
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="post">
    <img src={post.data.image || "https://source.unsplash.com/1200x500/?fishing"} alt={post.data.title} class="post-image" />
    <h1>{post.data.title}</h1>
    <p class="post-date">{new Date(post.data.publishDate).toLocaleDateString()}</p>
    <div class="post-content">
      <astro-content content={post.body} />
    </div>
  </article>
</BaseLayout>
