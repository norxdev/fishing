---
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Fishing Blog</title>
    <link rel="stylesheet" href="/fishing/style.css" />
  </head>

  <body>
    <header>
      <div class="container">
        <a href="/fishing/">‚Üê Home</a>
        <h1>Fishing Articles</h1>
      </div>
    </header>

    <main class="container">
      {posts.map((post) => (
        <article class="post-card">
          <h2>
            <a href={`/fishing/blog/${post.slug}/`}>
              {post.data.title}
            </a>
          </h2>
          <p>{post.data.description}</p>
        </article>
      ))}
    </main>
  </body>
</html>
